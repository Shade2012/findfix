{
    "info": {
        "name": "FindFix - Password Reset (OTP)",
        "description": "API collection for testing Forget Password with OTP feature",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Request OTP (Forget Password)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"testuser@example.com\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/forgot-password",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "forgot-password"
                    ]
                },
                "description": "Request OTP for password reset. Check email (evanluis198@gmail.com) for OTP code. OTP valid for 5 minutes."
            }
        },
        {
            "name": "2. Verify OTP",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"otp\": \"123456\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/verify-otp",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "verify-otp"
                    ]
                },
                "description": "Verify the OTP code received via email. Replace 123456 with actual OTP."
            }
        },
        {
            "name": "3. Reset Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"otp\": \"123456\",\n  \"password\": \"newpassword123\",\n  \"password_confirmation\": \"newpassword123\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/reset-password",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "reset-password"
                    ]
                },
                "description": "Reset password with valid OTP. Password must be minimum 8 characters and confirmed."
            }
        },
        {
            "name": "4. Login with New Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"newpassword123\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/login",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "login"
                    ]
                },
                "description": "Test login with newly reset password"
            }
        }
    ]
}